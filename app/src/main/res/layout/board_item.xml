<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/itemborder"
    android:orientation="vertical"
    android:layout_marginHorizontal="10dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/board_writer_image"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/board_writer_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="작성자"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="17dp"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/board_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글 제목"
            android:textColor="#000000"
            android:textSize="23dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>


    <TextView
        android:id="@+id/board_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="게시판 내용"
        android:textColor="#131313"
        android:textSize="15dp"
        android:layout_marginTop="5dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/board_time"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="글 쓴 시간"
            android:textColor="#000000"
            android:layout_gravity="left"
            android:textSize="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/pictures"
                android:layout_marginRight="2dp"
                android:layout_gravity="right"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                android:id="@+id/board_picture_cnt"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:text="0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/people"
                android:layout_gravity="right"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                android:id="@+id/board_cur_people"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:text="1"/>
            <TextView
                android:layout_marginLeft="1dp"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:text="/"/>
            <TextView
                android:layout_marginLeft="1dp"
                android:id="@+id/board_max_people"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:textSize="10dp"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>